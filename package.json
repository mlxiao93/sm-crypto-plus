{
  "name": "sm-crypto-plus",
  "version": "1.0.2",
  "description": "国密算法sm2、sm3、sm4的TS实现",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlxiao93/sm-crypto-plus.git"
  },
  "scripts": {
    "dev": "rollup -c rollup.config.js -w",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "playground": "npx http-server ./"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "browser": "./dist/index.umd.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sm2": {
      "types": "./dist/sm2.d.ts",
      "import": "./dist/sm2.js",
      "require": "./dist/index.cjs"
    },
    "./sm3": {
      "types": "./dist/sm3.d.ts",
      "import": "./dist/sm3.js",
      "require": "./dist/sm3.cjs"
    },
    "./sm4": {
      "types": "./dist/sm4.d.ts",
      "import": "./dist/sm4.js",
      "require": "./dist/sm4.cjs"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.js",
      "require": "./dist/helpers.cjs"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist"
  ],
  "author": "mlxiao93@163.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/bigi": "^1.4.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.3.0",
    "@types/sm-crypto": "^0.3.4",
    "core-js": "^3.35.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.9.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  }
}

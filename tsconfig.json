{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["src/**/*", "playground/**/*"],
  "exclude": ["**/*.test.ts", "**/__tests__/**", "dist"]
}
